<%- include ('../../partials/header.ejs') %>
<body>
    <%- include ('../../partials/navbar.ejs') %>
    <div class="container">
        <br>
        <div class="card">
            <div class="card-header">
               <h2>Usuários</h2>
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/admin/users/create">Criar novo usuário</a><br><br>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr>
                            <th><%= user.id %></th>
                            <th><%= user.email %></th>
                            <th>
                                <form action="/categories/delete" method="POST" style="display: inline;" onsubmit="confirmDelete(event, this)">
                                    <input type="hidden" name="id" value="<%= user.id%>">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                            </th>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmDelete(event, form) {
        event.preventDefault()
        let decision = confirm("Tem certeza que quer deletar esse usuário?")
        if (decision) {
            form.submit()
        }
    }


</script>